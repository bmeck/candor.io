scope uv

setTimeout(callback, interval) {
  scope uv, print
  timer = uv.newTimer()
  uv.timerStart(timer, interval, 0)
  timer.onTimer = () {
    scope uv, timer, callback
    uv.close(timer)
    callback()
  }
  return timer
}

setTimeout(() {
  scope print
  print("Hello World!")
}, 500)

uv.run()
